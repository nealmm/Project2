                    <img class="image is-fullwidth is-cover is-rounded" style="height: 200px;" src="/assets/images/tjp4ca.png" alt="">
                  </div>
                  <div class="column is-8">
                    <h3 class="is-size-4 has-text-weight-semibold">Michael Park</h3>
                    <p class="mb-6 has-text-grey-dark">Back End Development</p>
                    <p class="has-text-grey-dark">GitHub</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!--Person2-->
            <div class="column is-5">
              <div class="box p-5">
                <div class="columns">
                  <div class="column is-4 mb-4 mb-0-desktop">
                    <img class="image is-fullwidth is-cover is-rounded" style="height: 200px;" src="/assets/images/nealmm.png" alt="">
                  </div>
                  <div class="column is-8">
                    <h3 class="is-size-4 has-text-weight-semibold">Matt Neal</h3>
                    <p class="mb-6 has-text-grey-dark">Back End Development</p>
                    <p class="has-text-grey-dark">GitHub</p>
                  </div>
                </div>
              </div>
            </div>

            <!--Person3-->
            <div class="column is-5">
              <div class="box p-5">
                <div class="columns">
                  <div class="column is-4 mb-4 mb-0-desktop">
                    <img class="image is-fullwidth is-cover is-rounded" style="height: 200px;" src="/assets/images/alenco98.png" alt="">
                  </div>
                  <div class="column is-8">
                    <h3 class="is-size-4 has-text-weight-semibold">Franco Melendez</h3>
                    <p class="mb-6 has-text-grey-dark">Front End Development</p>
                    <p class="has-text-grey-dark">GitHub</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!--Person4-->
            <div class="column is-5">
              <div class="box p-5">
                <div class="columns">
                  <div class="column is-4 mb-4 mb-0-desktop">
                    <img class="image is-fullwidth is-cover is-rounded" style="height: 200px;" src="/assets/images/gsmith560.png" alt="">
                  </div>
                  <div class="column is-8">
                    <h3 class="is-size-4 has-text-weight-semibold">Grahah Smith</h3>
                    <p class="mb-6 has-text-grey-dark">Front End Development</p>
                    <p class="has-text-grey-dark">GitHub</p>
                  </div>
                </div>
              </div>
            </div>
            
            

        </div>
        </section>

        <!--Footer-->
        <footer class="container">
            <h2 class="text-movie has-text-centered">DC Dines Underground</h2>
            <div class="text-movie has-text-centered has-text-weight-bold">
                &copy; 2022 Group 3
            </div>
        </footer>

