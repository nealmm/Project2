    <body>

        <!--Showcase section-->
        <section class="showcase">
            <div class="video-container">
                <video src="/assets/images/dcnightshort.mov" autoplay muted loop></video>
            </div>
            <div class="header">
                <img src="/assets/images/DCDines-removebg.png" alt="logo"/>
                <h1>
                    <a href="#about" class="btn">Login</a>
                    <a href="#about" class="btn">Sign Up</a>
                </h1>
            </div>
        </section>

        <section id="about">
            <h1></h1>
            <p></p>
        </section>

        <!--Boxes with website purpose-->
        <section class="boxes has-text-weight-bold">
            <div class="container">
            <div class="box">
                <h2>Dine</h2>
                <p>
                Dine at local Washington DC restaurants
                </p>
            </div>
        
            <div class="box">
                <h2>Review</h2>
                <p>
                Post your reviews on this secure forum for members to see
                </p>
            </div>
        
            <div class="box">
                <h2>Share</h2>
                <p>
                Communicate with other community members and share recommendations
                </p>
            </div>
            
            <div class="box">
                <h2>Explore</h2>
                <p>
                Discover new favorite restaurants
                </p>
            </div>
            
            </div>
        </section>
        
        <!--Contact us form used from project1-->
        <section class="contact-us">
            <div class="container py-5 my-5">
              <h2 class="title is-2 is-capitalized">Contact DC Dines Underground</h2>
                <div class="columns is-justify-content-center">
                  <div class="column is-5-tablet is-5-desktop is-5-widescreen is-5-fullh">
                    <form method="post"
                    action="https://public.herotofu.com/v1/5aa8ac20-fc8b-11ec-afe3-392e2c671a11" class="box p-5">
                    
                      <label class="is-block mb-4">
                        <span class="is-block mb-2">Your Name</span>
                        <input
                          name="name"
                          type="text"
                          class="input"
                          placeholder="Name"
                        />
                      </label>
          
                      <label class="is-block mb-4">
                        <span class="is block mb-2">Email Address</span>
                        <input
                          name="email"
                          type="email"
                          class="input"
                          placeholder="Email"
                        />
                      </label>
          
                      <label class="is-block mb-4">
                        <span class="is-block mb-2">Message</span>
                        <textarea
                          name="message"
                          class="textarea"
                          rows="4"
                          placeholder="Your question for DC Dines Underground.."
                        ></textarea>
                      </label>
          
                      <div class="mb-4">
                        <button type="submit" class="button is-link px-4">Submit</button>
                      </div>
                  
                  </form>
                  </div>
                </div>
              </div>  
        </section>

